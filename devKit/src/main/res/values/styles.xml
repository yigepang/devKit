<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="normal_text_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="pop_animation_center" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_gone</item>
    </style>

    <style name="CustomProgressDialog" parent="Theme.AppCompat.Dialog">
        <!--此属性控制悬浮窗背景是否变暗-->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- alertDialog窗口背景色 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--dialog是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--dialog是否有标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="TitleBarDefaultStyle">
        <item name="android:background">@drawable/bar_drawable_placeholder</item>
        <item name="leftIcon">@drawable/bar_drawable_placeholder</item>
        <item name="leftBackground">@drawable/bar_drawable_placeholder</item>
        <item name="rightBackground">@drawable/bar_drawable_placeholder</item>
        <item name="title">@string/bar_string_placeholder</item>
        <item name="leftTitle">@string/bar_string_placeholder</item>
        <item name="rightTitle">@string/bar_string_placeholder</item>
        <item name="lineDrawable">@drawable/bar_drawable_placeholder</item>
        <item name="titleOverflowMode">marquee</item>
        <item name="leftTitleOverflowMode">end</item>
        <item name="rightTitleOverflowMode">end</item>
    </style>
</resources>